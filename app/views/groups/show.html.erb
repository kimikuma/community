<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Group detail</h2>
  		<table class='table'>
  		  <tr>
  		    <th></th>
  		    <th>グループ名</th>
  		    <th>紹介文</th>
  		    <th>メンバー</th>
  		    <th></th>
  		    </tr>
  		    <tr>
          <td><%=image_tag @group.group_image,size:'50x50' %>
          </td>
          <td><%=@group.name %></td>
          <td><%=@group.introduction %></td>
          <td><% @group.users.each do |user| %>
          <%=user.name %>
          <% end %></td>
          <td>
            <% unless @group.is_owner_by?(current_user) %>
            <% if @group.includesUser?(current_user) %>
            <%=link_to "Leave this group",group_group_users_path(@group),method: :delete,class: "btn btn-success" %>
            <% else %>
            <%=link_to "Join this group",group_group_users_path(@group),method: :post,class: "btn btn-danger" %>
            <% end %>
            <% else %>
            <%=link_to "edit",edit_group_path(@group),class: "btn btn-success" %>
            <% end %>
          </td>
        </tr>
      </table>