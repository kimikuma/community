<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h1>Event Mail</h1>
      <%=form_with url: group_send_mail_path(@group),method: :get do |f| %>
      <p>Title</p>
      <%=f.text_field:mail_title %>
      <p>Content</p>
      <%=f.text_area:mail_content %>
      <p><%=f.submit "送信",class: "btn btn-sm btn-success" %></p>
      <% end %>
    </div>
  </div>
</div>